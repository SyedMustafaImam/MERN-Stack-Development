    <%- include( './partials/nav.ejs') %>

  </header>
  <main>
    <!-- <h1><%=title%></h1> -->

    <div id="list">

    </div>

    <!-- Modal Structure -->

    <div id="edit" class="container">

    </div>

  </main>
  <footer>

    <%- include( './partials/footer.ejs') %>

  </footer>

</body>
